{
  "manifest_version": 3,
  "name": "Unuglifier Extension",
  "version": "1.0",
  "description": "Plays music in the background. (Originally also supposed to be a bookmark holder but whatever)",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["player.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "icons/icon.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://www.youtube-nocookie.com;"
  }
}
